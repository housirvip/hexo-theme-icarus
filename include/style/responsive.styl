/* ---------------------------------
 *         Responsive Layout
 * --------------------------------- */
+widescreen()
    .is-1-column .container
        max-width: $widescreen - 2 * $gap // 將 $desktop 改成 $widescreen
        width: $widescreen - 2 * $gap // 將 $desktop 改成 $widescreen

    .is-2-column .container
        max-width: $widescreen - 2 * $gap // 將 $desktop 改成 $widescreen
        width: $widescreen - 2 * $gap // 將 $desktop 改成 $widescreen

+fullhd()
    .is-2-column .container
        max-width: $fullhd - 2 * $gap // 將 $widescreen 改成 $fullhd
        width: $fullhd - 2 * $gap // 將 $widescreen 改成 $fullhd

    .is-1-column .container
        max-width: $fullhd - 2 * $gap // 將 $widescreen 改成 $fullhd
        width: $fullhd - 2 * $gap // 將 $widescreen 改成 $fullhd

+tablet()
    .is-sticky
        position: -webkit-sticky
        position: sticky
        top: 1.5rem
        z-index: 99

    .column-main, .column-left, .column-right, .column-right-shadow
        &.is-sticky
            top: .75rem
            align-self: flex-start

+mobile()
    .section
        padding: 1.5rem 1rem
